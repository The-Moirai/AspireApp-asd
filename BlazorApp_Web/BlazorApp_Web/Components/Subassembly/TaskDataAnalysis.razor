<div class="card">
    <div class="card-header">
        <h5>任务历史数据分析</h5>
    </div>
    <div class="card-body">
        <div class="row">
            <div class="col-md-4">
                <div class="form-group">
                    <label>选择任务:</label>
                    <select class="form-control" @bind="SelectedTaskId">
                        @foreach (var task in AvailableTasks)
                        {
                            <option value="@task.Id">@task.Description</option>
                        }
                    </select>
                </div>

                <div class="form-group">
                    <label>分析类型:</label>
                    <select class="form-control" @bind="AnalysisType">
                        <option value="single">单无人机数据</option>
                        <option value="all">所有无人机数据</option>
                    </select>
                </div>

                @if (AnalysisType == "single")
                {
                    <div class="form-group">
                        <label>选择无人机:</label>
                        <select class="form-control" @bind="SelectedDroneId">
                            @foreach (var drone in AvailableDrones)
                            {
                                <option value="@drone.Id">@drone.Name</option>
                            }
                        </select>
                    </div>
                }

                <button class="btn btn-primary" @onclick="LoadData">查询</button>
            </div>

            <div class="col-md-8">
                <div class="chart-container">
                    <canvas id="taskChart"></canvas>
                </div>

                @if (TaskData?.Any() == true)
                {
                    <div class="mt-3">
                        <h6>任务执行详情</h6>
                        <table class="table table-sm table-striped">
                            <thead>
                                <tr>
                                    <th>无人机</th>
                                    <th>开始时间</th>
                                    <th>结束时间</th>
                                    <th>状态</th>
                                    <th>进度</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in TaskData)
                                {
                                    <tr>
                                        <td>@item.DroneName</td>
                                        <td>@item.StartTime.ToString("g")</td>
                                        <td>@(item.EndTime?.ToString("g") ?? "进行中")</td>
                                        <td>@item.Status</td>
                                        <td>
                                            <div class="progress">
                                                <div class="progress-bar"
                                                     role="progressbar"
                                                     style="width: @(item.Progress)%;"
                                                     aria-valuenow="@item.Progress"
                                                     aria-valuemin="0"
                                                     aria-valuemax="100">
                                                    @item.Progress%
                                                </div>
                                            </div>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                }
            </div>
        </div>
    </div>
</div>
